		ORDER BY sc.sort_id DESC 
		<if test="limitClause != null and limitClause != ''">
			${limitClause}
		</if>
	</select>
	
	<select id="getBrandTopicCommodity" resultType="java.util.HashMap" >
		select  sc.*
		    <choose>
                <when test="condition.userId != null and condition.userId != ''">
